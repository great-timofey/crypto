{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "esnext",
    "baseUrl": ".",
    "types": [],
    "paths": {
      "$components": ["src/components"],
      "$components/*": ["src/components/*"],
      "$global": ["src/global"],
      "$global/*": ["src/global/*"],
      "$assets/*": ["assets/*"],
      "$screens": ["src/screens"],
      "$screens/*": ["src/screens/*"],
      "$services/*": ["src/services/*"],
      "$navigation": ["src/navigation"],
      "$navigation/*": ["src/navigation/*"],
      "$redux": ["src/redux"],
      "$redux/*": ["src/redux/*"],
      "$i18n": ["src/i18n"],
      "$i18n/*": ["src/i18n/*"],
      "$contexts": ["src/contexts"],
      "$contexts/*": ["src/contexts/*"],
      "$hooks": ["src/hooks"],
      "$hooks/*": ["src/hooks/*"]
    },
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "src/services/schema.ts"]
}
